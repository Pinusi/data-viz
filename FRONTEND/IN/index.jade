extends layout

mixin widget(name)
	div.relative
		div.header
			a.settings(href="#" ng-click='')
				i.fa.fa-cog
			| Title
			a.open_modal(href="#" ng-click='openModal()')
				i.fa.fa-arrows-alt
		div.container(class="dataviz-widget-#{name}")

block content
	div.dv_page
		div.dashboard_title Title
		div#packery
			div.gutter-sizer
			div.grid-sizer
			div.widget(ng-controller="textWidget")
				+widget("text")
			div.widget(ng-controller="sunBurst")
				+widget("sunburst")
			div.widget
				+widget
			div.widget
				+widget
			div.widget
				+widget
			div.widget
				+widget